<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- internationalize your plugin -->
    <resource type="i18n" name="org.whitesource.bamboo.plugins language" location="english"/>

    <taskType name="WhiteSource Agent" class="org.whitesource.bamboo.plugins.AgentTask" key="ws.agent">
      <description>Update WhiteSource OSS inventory.</description>
      <category name="deployment" />
      <category name="test" />
      <configuration class="org.whitesource.bamboo.plugins.AgentTaskConfigurator"/>
      <resource type="freemarker" name="edit" location="editAgentTask.ftl"/>
    </taskType>
</atlassian-plugin>
